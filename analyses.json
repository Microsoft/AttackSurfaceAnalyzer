{
  "rules": [
    {
      "name": "Privileged ports",
      "desc": "Flag when privileged ports are opened.",
      "flag": "WARNING",
      "resultType": "PORT",
      "clauses": [
        {
          "field": "port",
          "op": "LT",
          "data": [
            "1024"
          ]
        }
      ]
    },
    {
      "name": "Privileged users",
      "desc": "Flag when privileged users are modified.",
      "flag": "WARNING",
      "resultType": "USER",
      "clauses": [
        {
          "field": "Privileged",
          "op": "EQ",
          "data": [
            "true"
          ]
        }
      ]
    },
    {
      "name": "Unsigned binaries",
      "desc": "Flag when unsigned/incorrectly signed binaries are added.",
      "flag": "WARNING",
      "platform": [
        "WINDOWS"
      ],
      "changeTypes": [
        "CREATED",
        "MODIFIED"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "IsExecutable",
          "op": "EQ",
          "data": [
            "true"
          ]
        },
        {
          "field": "SigningStatus",
          "op": "NEQ",
          "data": [
            "Valid"
          ]
        }
      ]
    },
    {
      "name": "SetUid",
      "desc": "Flag UID is set on a file.",
      "flag": "WARNING",
      "platform": [
        "LINUX",
        "MACOS"
      ],
      "changeTypes": [
        "CREATED",
        "MODIFIED"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "SetUid",
          "op": "EQ",
          "data": [
            "true"
          ]
        }
      ]
    },
    {
      "name": "SetGid",
      "desc": "Flag GID is set on a file.",
      "flag": "WARNING",
      "platform": [
        "LINUX",
        "MACOS"
      ],
      "changeTypes": [
        "CREATED",
        "MODIFIED"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "SetGid",
          "op": "EQ",
          "data": [
            "true"
          ]
        }
      ]
    },
    {
      "name": "Executables",
      "desc": "Flag when executables are created.",
      "flag": "INFORMATION",
      "platforms": [
        "LINUX",
        "MACOS",
        "WINDOWS"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "IsExecutable",
          "op": "EQ",
          "data": [
            "true"
          ]
        }
      ]
    },
    {
      "name": "Missing ASLR",
      "desc": "Flag when executables are created without ASLR.",
      "flag": "WARNING",
      "platforms": [
        "WINDOWS"
      ],
      "changeTypes": [
        "CREATED",
        "MODIFIED"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "IsExecutable",
          "op": "EQ",
          "data": [
            "true"
          ]
        },
        {
          "field": "Characteristics",
          "op": "DOES_NOT_CONTAIN",
          "data": [
            "IMAGE_DLLCHARACTERISTICS_DYNAMIC_BASE",
            "IMAGE_DLLCHARACTERISTICS_HIGH_ENTROPY_VA"
          ]
        }
      ]
    },
    {
      "name": "Missing DEP",
      "desc": "Flag when executables are created without DEP.",
      "flag": "WARNING",
      "platforms": [
        "WINDOWS"
      ],
      "changeTypes": [
        "CREATED",
        "MODIFIED"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "IsExecutable",
          "op": "EQ",
          "data": [
            "true"
          ]
        },
        {
          "field": "Characteristics",
          "op": "DOES_NOT_CONTAIN",
          "data": [
            "IMAGE_DLLCHARACTERISTICS_NX_COMPAT"
          ]
        }
      ]
    },
    {
      "name": "Missing Signed Enforcement",
      "desc": "Flag when executables are signed binaries are created without Force Integrity flag.",
      "flag": "WARNING",
      "platforms": [
        "WINDOWS"
      ],
      "changeTypes": [
        "CREATED",
        "MODIFIED"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "IsExecutable",
          "op": "EQ",
          "data": [
            "true"
          ]
        },
        {
          "field": "SignatureStatus",
          "op": "EQ",
          "data": [
            "Valid"
          ]
        },
        {
          "field": "Characteristics",
          "op": "DOES_NOT_CONTAIN",
          "data": [
            "IMAGE_DLLCHARACTERISTICS_FORCE_INTEGRITY"
          ]
        }
      ]
    },
    {
      "name": "Certificates",
      "desc": "Flag when certificates are placed on disk.",
      "flag": "INFORMATION",
      "platforms": [
        "LINUX",
        "MACOS",
        "WINDOWS"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "Path",
          "op": "ENDS_WITH",
          "data": [
            ".cer",
            ".der",
            ".crt"
          ]
        }
      ]
    },
    {
      "name": "UPNP Ports",
      "desc": "Universal Plug n' Play.",
      "flag": "INFORMATION",
      "platforms": [
        "LINUX",
        "MACOS",
        "WINDOWS"
      ],
      "resultType": "PORT",
      "clauses": [
        {
          "field": "port",
          "op": "EQ",
          "data": [
            "1900"
          ]
        }
      ]
    },
    {
      "name": "Keystore Files",
      "desc": "Java keystore files contain encryption keys and certificates.",
      "flag": "INFORMATION",
      "platforms": [
        "LINUX",
        "MACOS",
        "WINDOWS"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "Path",
          "op": "ENDS_WITH",
          "data": [
            ".keystore"
          ]
        }
      ]
    },
    {
      "name": "Firewall Settings Modified",
      "desc": "Flag when OS X firewall settings are modified.",
      "flag": "WARNING",
      "platforms": [
        "MACOS"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "Path",
          "op": "EQ",
          "data": [
            "/Library/Preferences/com.apple.alf.plist"
          ]
        }
      ]
    },
    {
      "name": "COM Objects Modified",
      "desc": "Flags when the COM Object registry has been changed.",
      "flag": "INFORMATION",
      "platforms": [
        "WINDOWS"
      ],
      "resultType": "REGISTRY",
      "clauses": [
        {
          "field": "KEY",
          "op": "CONTAINS",
          "data": [
            "HKEY_LOCAL_MACHINE\\SOFTWARE\\Classes\\CLSID"
          ]
        }
      ]
    }
  ],
  "meta": {
    "defaultLevels": {
      "PORT": "INFORMATION",
      "FILE": "DEBUG",
      "SERVICE": "INFORMATION",
      "CERTIFICATE": "INFORMATION",
      "USER": "INFORMATION",
      "REGISTRY": "DEBUG",
      "FIREWALL": "INFORMATION",
      "COM": "INFORMATION"
    }
  }
}